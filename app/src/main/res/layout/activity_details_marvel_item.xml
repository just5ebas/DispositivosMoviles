<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_marvel2"
    android:orientation="vertical"
    tools:context=".ui.activities.DetailsMarvelItem">

    <TextView
        android:id="@+id/marvel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/satisfy"
        android:textAlignment="center"
        android:textColor="@color/rojo_pasion"
        android:textSize="32sp"
        android:textStyle="bold" />.


    <ImageView
        android:id="@+id/img_marvel"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="25dp" />

    <TextView
        android:id="@+id/marvel_comic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/roboto"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/white"/>


</LinearLayout>